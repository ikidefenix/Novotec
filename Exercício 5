Var
// Seção de Declarações das variáveis 

valor: real
sexo: caractere
nome: caractere


Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 

escreval("Escreva seu nome: ")
leia(nome)
escreval("Escreva seu sexo: ")
leia(sexo)
escreval("escreva o valor de seu produto: ")
leia(valor)

se (sexo = "F") então
   escreval("Com o desconto o valor de seu produto é: ", valor*0.87)
fimse

se (sexo = "M") então
   escreval("Com o desconto o valor de seu produto é: ", valor*0.95)
fimse

